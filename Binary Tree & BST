void fun(TreeNode *root){
		if(root==NULL) return;

		fun(root->left);
		if(prev!=NULL && prev->val>root->val){
				if(first==NULL){
						first = prev;
				}
				second = root;
		}
		prev = root;
		fun(root->right);
}
